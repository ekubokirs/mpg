<%= render partial: "shared/nav" %>
<div class="mp_back">
	<div class="row">
		<div class="small-6 colums">
			<p>Car Name: <%= @car.name %></p>
			<p>Color: <%= @car.color %></p>
		</div>
		<div class="small-6 colums">
			<p>Year: <%= @car.year %></p>
			<p>Starting Miles: <%= @car.current_miles %></p>
		</div>
	</div>
	<div class="row">
		<table>
		<thead>
			<tr>
				<td>Date Filled</td>
				<td>Price Per Gallon</td>
				<td>Number of Gallons</td>
				<td>Miles on Tank</td>
				<td>MPG</td>
				<td>Price Per Mile</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			<% @tanks.each do |t| %>
				<tr>
					<td><%= t.created_at %></td>
					<td><%= t.price %></td>
					<td><%= t.amount %></td>
					<td><%= t.current_miles %></td>
					<td><%= t.mpg %></td>
					<td><%= t.ppm %></td>
					<td><%= link_to "Delete", tank_url(t.id), method: :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>
</div>