<%= render partial: "shared/nav" %>
<div class="mp_back">
	<%= form_for @tanks, url: tanks_url(@tanks) do |f| %>
		<%= f.label :amount, "Amount in Gallons" %>
		<%= f.text_field :amount %>
		<%= f.label :price, "Price Per Gallon" %>
		<%= f.text_field :price %>
		<%= f.label :current_miles %>
		<%= f.text_field :current_miles, "Miles on This Tank" %>
		<!-- add checkboxes for driving conditions here -->
		<%= f.submit, :class => "tiny button mp_submit" %>
		<%= link_to "Cancel", root_url, :class => "tiny button" %>
	<% end %>
</div>